<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1 class="text-center">Welcome to the Dev Match Community!</h1>
        <p class="text-center">Below you will find every member that is a part of our community, their profile plan, their job title!</p>
        <p class="text-center">Click on their name to head to their profile and find out more.</p> </br>
            <ul class="list-unstyled">
                <% @users.each do |user|%>
                    <% if user.profile %>
                        <li>
                            <div class="well row <%= cycle('white-bg', '')%>">
                                <div class="col-sm-4 text-center">
                                    <% if user.profile.avatar %>
                                        <%= link_to user do%>
                                           <%= image_tag user.profile.avatar.url(:thumb), class: "index-pic" %>
                                        <% end %>
                                    <% end %>
                                </div>
                                <div>
                                    <%= link_to user do%>
                                        <h2> <%= user.profile.first_name%> <%= user.profile.last_name%></h2>
                                    <% end %>
                                    <p><%= user.profile.job_title%>
                                    <% if user.plan_id == 2 %>
                                        <span class="label label-success">PRO</span>
                                    <% end %> </p>
                                </div>
                            </div>
                        </li>
                    <% end %>
                <% end %>
            </ul>
    </div>
</div>